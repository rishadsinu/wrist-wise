    <script>
        document.querySelector('.btn-order').addEventListener('click', function (e) {
            e.preventDefault();
    
            // Get the selected address checkbox
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
    
            // Check if an address is selected
            if (!selectedAddress) {
                Swal.fire('Error', 'Please select an address', 'error');
                return;
            }
    
            // Check if Cash on Delivery checkbox is checked
            const codCheckbox = document.querySelector('#cod');
            if (!codCheckbox.checked) {
                Swal.fire('Error', 'Please select Cash on Delivery as your payment method', 'error');
                return;
            }
    
            // Prepare the order data
            const orderData = {
                selectedAddress: selectedAddress.getAttribute('data-address-id'),
                paymentMethod: 'Cash on Delivery'
            };
    
            // Send the order request
            fetch('/placeOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(orderData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Success', 'Your order was placed successfully!', 'success').then(() => {
                            // Redirect to the orderPlaced page with the order ID as a query parameter
                            window.location.href = `/orderPlaced?orderId=${data.orderId}`;
                        });
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error', 'An unexpected error occurred', 'error');
                });
        });
    </script>
    
