    <script>
        $(document).ready(function () {
            $('#saveAddress').click(function () {
                var isValid = true;

                // Clear previous error messages
                $('.text-danger').text('');

                var fullName = $('#fullName').val().trim();
                if (fullName.length < 3) {
                    $('#fullNameError').text('Full Name must be at least 3 characters.');
                    isValid = false;
                }

                var email = $('#email').val().trim();
                var emailPattern = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
                if (!emailPattern.test(email)) {
                    $('#emailError').text('Please enter a valid Gmail address.');
                    isValid = false;
                }

                var phone = $('#phone').val().trim();
                var phonePattern = /^\d{10}$/;
                if (!phonePattern.test(phone)) {
                    $('#phoneError').text('Phone number must be exactly 10 digits.');
                    isValid = false;
                }

                var pinCode = $('#pinCode').val().trim();
                var pinCodePattern = /^\d{6}$/;
                if (!pinCodePattern.test(pinCode)) {
                    $('#pinCodeError').text('Please give valid pin code.');
                    isValid = false;
                }

                var streetAddress = $('#streetAddress').val().trim();
                if (streetAddress.length < 10) {
                    $('#streetAddressError').text('Give currect street address.');
                    isValid = false;
                }

                var apartmentNumber = $('#apartmentNumber').val().trim();
                if (apartmentNumber !== '' && (!/^\d{1,3}$/.test(apartmentNumber) || parseInt(apartmentNumber) > 999)) {
                    $('#apartmentNumberError').text('Provide valid appartment number');
                    isValid = false;
                }

                var town = $('#town').val().trim();
                if (!/^[a-zA-Z\s]+$/.test(town)) {
                    $('#townError').text('Give valid town.');
                    isValid = false;
                }

                var city = $('#city').val().trim();
                if (!/^[a-zA-Z\s]+$/.test(city)) {
                    $('#cityError').text('Provide currect city .');
                    isValid = false;
                }

                var state = $('#state').val().trim();
                if (!/^[a-zA-Z\s]+$/.test(state)) {
                    $('#stateError').text('Provide true state .');
                    isValid = false;
                }

                if (isValid) {
                    var formData = $('#addAddressForm').serialize();
                    $.ajax({
                        url: '/add-address',
                        type: 'POST',
                        data: formData,
                        success: function (response) {
                            if (response.success) {
                                $('#addAddressModal').modal('hide');
                                location.reload();
                            } else {
                                alert('Failed to add address. Please try again.');
                            }
                        },
                        error: function () {
                            alert('An error occurred. Please try again.');
                        }
                    });
                }
            });
        });
    </script>


