   <!-- edit user details validation -->
    <script>
        document.getElementById('editButton').addEventListener('click', function () {
            document.getElementById('displayName').readOnly = false;
            document.getElementById('phoneNumber').readOnly = false;
            this.style.display = 'none';
            document.getElementById('updateButton').style.display = 'inline-block';
        });
    
        document.getElementById('userDetailsForm').addEventListener('submit', function (e) {
            let isValid = true;
    
            const name = document.getElementById('displayName').value.trim();
            const phone = document.getElementById('phoneNumber').value.trim();
    
            const nameError = document.getElementById('nameError');
            const phoneError = document.getElementById('phoneError');
    
            nameError.textContent = '';
            phoneError.textContent = '';
    
            if (name.length < 2) {
                nameError.textContent = 'Enter a valid name.';
                isValid = false;
            }
    
            if (!/^\d{10}$/.test(phone)) {
                phoneError.textContent = 'Enter a valid phone number.';
                isValid = false;
            }
                if (!isValid) {
                e.preventDefault();
            }
        });
    </script>
    

