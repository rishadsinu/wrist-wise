    <!-- edit  -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const addCouponBtn = document.getElementById('addCouponBtn');
            const addCouponModal = new bootstrap.Modal(document.getElementById('addCouponModal'));
            const editCouponModal = new bootstrap.Modal(document.getElementById('editCouponModal'));
            const saveCouponBtn = document.getElementById('saveCouponBtn');
            const updateCouponBtn = document.getElementById('updateCouponBtn');
            const addCouponForm = document.getElementById('addCouponForm');
            const editCouponForm = document.getElementById('editCouponForm');
            const couponList = document.getElementById('couponList');

            addCouponBtn.addEventListener('click', function () {
                addCouponModal.show();
            });

            saveCouponBtn.addEventListener('click', function () {
                if (validateForm('add')) {
                    submitCouponForm('add');
                }
            });

            updateCouponBtn.addEventListener('click', function () {
                if (validateForm('edit')) {
                    submitCouponForm('edit');
                }
            });

            couponList.addEventListener('click', function (e) {
                if (e.target.classList.contains('edit-coupon')) {
                    const couponId = e.target.getAttribute('data-coupon-id');
                    fetchCouponDetails(couponId);
                }
            });

            function validateForm(formType) {
                let isValid = true;
                clearErrorMessages(formType);

                const prefix = formType === 'edit' ? 'edit' : '';

                // Coupon code validation
                const couponCode = document.getElementById(`${prefix}CouponCode`).value;
                if (!/^[a-zA-Z0-9]{6,}$/.test(couponCode)) {
                    document.getElementById(`${prefix}CouponCodeError`).textContent = 'Please enter at least 6 alphanumeric characters.';
                    isValid = false;
                }

                // Redeem percentage validation
                const discount = document.getElementById(`${prefix}Discount`).value;
                if (discount < 1 || discount > 90) {
                    document.getElementById(`${prefix}DiscountError`).textContent = 'Please provide a correct percentage (1 to 90).';
                    isValid = false;
                }

                // Expiry date validation
                const expiryDate = document.getElementById(`${prefix}ExpiryDate`).value;
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                const expiry = new Date(expiryDate);
                if (expiry < today) {
                    document.getElementById(`${prefix}ExpiryDateError`).textContent = 'Please provide a valid date (today or later).';
                    isValid = false;
                }

                return isValid;
            }

            function clearErrorMessages(formType) {
                const prefix = formType === 'edit' ? 'edit' : '';
                document.getElementById(`${prefix}CouponCodeError`).textContent = '';
                document.getElementById(`${prefix}DiscountError`).textContent = '';
                document.getElementById(`${prefix}ExpiryDateError`).textContent = '';
            }

            function submitCouponForm(formType) {
                const prefix = formType === 'edit' ? 'edit' : '';
                const formData = {
                    couponCode: document.getElementById(`${prefix}CouponCode`).value,
                    couponName: document.getElementById(`${prefix}CouponName`).value,
                    discount: document.getElementById(`${prefix}Discount`).value,
                    minAmount: document.getElementById(`${prefix}MinAmount`).value,
                    expiryDate: document.getElementById(`${prefix}ExpiryDate`).value,
                    isListed: document.getElementById(`${prefix}Status`).value === 'true'
                };

                const url = formType === 'edit'
                    ? `/admin/update-coupon/${document.getElementById('editCouponId').value}`
                    : '/admin/add-coupon';

                const method = formType === 'edit' ? 'PUT' : 'POST';

                fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData),
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(`Coupon ${formType === 'edit' ? 'updated' : 'added'} successfully!`);
                            if (formType === 'edit') {
                                editCouponModal.hide();
                            } else {
                                addCouponModal.hide();
                                addCouponForm.reset();
                            }
                            location.reload(); // Refresh the page to show updated list
                        } else {
                            alert(`Error ${formType === 'edit' ? 'updating' : 'adding'} coupon: ` + data.message);
                        }
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                        alert(`An error occurred while ${formType === 'edit' ? 'updating' : 'adding'} the coupon.`);
                    });
            }

            function fetchCouponDetails(couponId) {
                fetch(`/admin/get-coupon/${couponId}`)
                    .then(response => response.json())
                    .then(coupon => {
                        document.getElementById('editCouponId').value = coupon._id;
                        document.getElementById('editCouponCode').value = coupon.couponCode;
                        document.getElementById('editCouponName').value = coupon.couponName;
                        document.getElementById('editDiscount').value = coupon.discount;
                        document.getElementById('editMinAmount').value = coupon.minAmount;
                        document.getElementById('editExpiryDate').value = coupon.expiryDate.split('T')[0];
                        document.getElementById('editStatus').value = coupon.isListed;

                        editCouponModal.show();
                    })
                    .catch(error => console.error('Error fetching coupon:', error));
