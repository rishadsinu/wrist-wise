    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const addCouponBtn = document.getElementById('addCouponBtn');
            const addCouponModal = new bootstrap.Modal(document.getElementById('addCouponModal'));
            const saveCouponBtn = document.getElementById('saveCouponBtn');
            const addCouponForm = document.getElementById('addCouponForm');
            const couponList = document.getElementById('couponList');

            addCouponBtn.addEventListener('click', function () {
                addCouponModal.show();
            });

            document.getElementById('addCouponModal').addEventListener('hidden.bs.modal', function () {
                addCouponForm.reset();
                clearErrorMessages();
            });

            saveCouponBtn.addEventListener('click', function () {
                if (validateForm()) {
                    const formData = {
                        couponCode: document.getElementById('couponCode').value,
                        couponName: document.getElementById('couponName').value,
                        discount: document.getElementById('discount').value,
                        minAmount: document.getElementById('minAmount').value,
                        expiryDate: document.getElementById('expiryDate').value,
                        isListed: document.getElementById('status').value === 'true'
                    };

                    fetch('/admin/add-coupon', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData),
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert('Coupon added successfully!');
                                addCouponModal.hide();
                                addCouponToList(data.coupon);
                                addCouponForm.reset();
                                clearErrorMessages();
                                location.reload();
                            } else {
                                alert('Error adding coupon: ' + data.message);
                            }
                        })
                        .catch((error) => {
                            console.error('Error:', error);
                            alert('An error occurred while adding the coupon.');
                        });
                }
            });

            function validateForm() {
                let isValid = true;
                clearErrorMessages();

                const couponCode = document.getElementById('couponCode').value;
                if (!/^[a-zA-Z0-9]{6,}$/.test(couponCode)) {
                    document.getElementById('couponCodeError').textContent = 'Please enter at least 6 alphanumeric characters.';
                    isValid = false;
                }

                const discount = document.getElementById('discount').value;
                if (discount < 1 || discount > 90) {
                    document.getElementById('discountError').textContent = 'Please provide a correct percentage (1 to 90).';
                    isValid = false;
                }

                const expiryDate = document.getElementById('expiryDate').value;
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                const expiry = new Date(expiryDate);
                if (expiry < today) {
                    document.getElementById('expiryDateError').textContent = 'Please provide a valid date (today or later).';
                    isValid = false;
                }

                return isValid;
            }

            function clearErrorMessages() {
                document.getElementById('couponCodeError').textContent = '';
                document.getElementById('discountError').textContent = '';
                document.getElementById('expiryDateError').textContent = '';
            }

            function addCouponToList(coupon) {
                const couponHTML = `
                <div class="col-md-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h5 class="card-title mb-0 text-primary">${coupon.couponName}</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3 text-success"><strong>Coupon code:</strong> ${coupon.couponCode}</p>
                            <p class="mb-1"><strong>Minimum Amount:</strong> ${coupon.minAmount}</p>
                            <p class="mb-1 text-success"><strong>Redeemable Discount:</strong> ${coupon.discount}%</p>
                            <p class="mb-1"><strong>Expiry Date:</strong> ${new Date(coupon.expiryDate).toLocaleDateString()}</p>
                            <p class="mb-3 text-${coupon.isListed ? 'success' : 'danger'}">
                                <strong>Status:</strong> ${coupon.isListed ? 'Active' : 'Inactive'}
                            </p>
                            <button class="btn btn-primary edit-coupon" data-coupon-id="${coupon._id}">Edit Coupon</button>
                            <button class="btn btn-danger delete-coupon" data-coupon-id="${coupon._id}">Remove</button>
                        </div>
                    </div>
                </div>
            `;
                couponList.insertAdjacentHTML('afterbegin', couponHTML);
            }
        });
    </script>
