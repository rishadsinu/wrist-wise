      const productOfferForm = document.getElementById('productOfferForm');
      const categoryOfferForm = document.getElementById('categoryOfferForm');
      const editOfferForm = document.getElementById('editOfferForm');
      const offerCards = document.getElementById('offerCards');
      const editOfferModal = new bootstrap.Modal(document.getElementById('editOfferModal'));

      function handleFormSubmit(event, formElement) {
        event.preventDefault();
        const formData = new FormData(formElement);
        const data = Object.fromEntries(formData.entries());

        // Convert checkboxes to arrays
        if (data.type === 'product') {
          data.products = formData.getAll('products');
        } else {
          data.categories = formData.getAll('categories');
        }

        fetch('/admin/addoffer/add', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        })
          .then(response => response.json())
          .then(result => {
            if (result.success) {
              // Close the modal
              const modal = bootstrap.Modal.getInstance(formElement.closest('.modal'));
              modal.hide();

              // Add the new offer card to the page
              addOfferCard(result.offer);

              // Reset the form
              formElement.reset();

              // Remove the modal backdrop manually
              const modalBackdrop = document.querySelector('.modal-backdrop');
              if (modalBackdrop) {
                modalBackdrop.remove();
              }

              // Remove the 'modal-open' class from the body
              document.body.classList.remove('modal-open');

              // Scroll to the newly added offer
              const newOfferCard = document.querySelector(`[data-offer-id="${result.offer._id}"]`);
              if (newOfferCard) {
                newOfferCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
              }
            } else {
              alert('Failed to add offer: ' + result.error);
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while adding the offer: ' + error.message);
          });
      }

      function addOfferCard(offer) {
        const card = document.createElement('div');
        card.className = 'col-md-6 mb-4';
        card.setAttribute('data-offer-id', offer._id);
        card.innerHTML = `
      <div class="card shadow">
        <div class="card-header py-3">
          <h5 class="card-title mb-0 text-primary">Offer Details</h5>
        </div>
        <div class="card-body">
          <p class="mb-1"><strong>Offer Name:</strong> ${offer.offerName}</p>
          <p class="mb-1 text-success"><strong>Discount:</strong> ${offer.discount}% Off</p>
          <p class="mb-1"><strong>Type:</strong> ${offer.type}</p>
          <p class="mb-1"><strong>Start Date:</strong> ${new Date(offer.startDate).toLocaleDateString()}</p>
          <p class="mb-1"><strong>End Date:</strong> ${new Date(offer.endDate).toLocaleDateString()}</p>
          <p class="mb-1"><strong>Items:</strong> ${offer.products.map(product => product.productTitle).join(', ') || offer.categories.map(category => category.name).join(', ') || 'None'}</p>
          <p class="mb-3 ${offer.status ? 'text-success' : 'text-danger'}">
            <strong>Status:</strong> ${offer.status ? 'Active' : 'Inactive'}
          </p>
          <button class="btn btn-primary edit-offer" data-offer-id="${offer._id}">Edit Offer</button>
          <button class="btn btn-danger delete-offer" data-offer-id="${offer._id}">Remove</button>
        </div>
      </div>
    `;

        // Check if we need to start a new row
        let lastRow = offerCards.querySelector('.row:last-child');
        if (!lastRow || lastRow.children.length >= 2) {
          lastRow = document.createElement('div');
          lastRow.className = 'row';
          offerCards.appendChild(lastRow);
        }

        lastRow.appendChild(card);
      }

      function handleDeleteClick(event) {
        if (event.target.classList.contains('delete-offer')) {
          const offerId = event.target.getAttribute('data-offer-id');
          if (confirm('Are you sure you want to delete this offer?')) {
            fetch(`/admin/addoffer/delete/${offerId}`, {
              method: 'DELETE',
            })
              .then(response => response.json())
              .then(result => {
                if (result.success) {
                  // Remove the offer card from the page
                  const cardToRemove = document.querySelector(`[data-offer-id="${offerId}"]`);
                  if (cardToRemove) {
                    cardToRemove.closest('.col-md-6').remove();
                  }
                } else {
                  alert('Failed to delete offer: ' + result.error);
                }
              })
              .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while deleting the offer: ' + error.message);
              });
          }
        }
      }

      function handleEditClick(event) {
        if (event.target.classList.contains('edit-offer')) {
          const offerId = event.target.getAttribute('data-offer-id');
          fetch(`/admin/addoffer/get/${offerId}`)
            .then(response => response.json())
            .then(result => {
              if (result.success) {
                populateEditForm(result.offer);
                editOfferModal.show();
              } else {
                alert('Failed to fetch offer details: ' + result.error);
              }
            })
            .catch(error => {
              console.error('Error:', error);
              alert('An error occurred while fetching the offer details: ' + error.message);
            });
        }
      }

      function populateEditForm(offer) {
        document.getElementById('editOfferId').value = offer._id;
        document.getElementById('editOfferType').value = offer.type;
        document.getElementById('editOfferName').value = offer.offerName;
        document.getElementById('editDiscount').value = offer.discount;
        document.getElementById('editStartDate').value = offer.startDate.split('T')[0];
        document.getElementById('editEndDate').value = offer.endDate.split('T')[0];
        document.getElementById('editStatus').value = offer.status.toString();

        const productsSection = document.getElementById('editProductsSection');
        const categoriesSection = document.getElementById('editCategoriesSection');

        if (offer.type === 'product') {
          productsSection.style.display = 'block';
          categoriesSection.style.display = 'none';
          populateCheckboxes(productsSection, offer.products, 'products');
        } else {
          productsSection.style.display = 'none';
          categoriesSection.style.display = 'block';
          populateCheckboxes(categoriesSection, offer.categories, 'categories');
        }
      }

      function populateCheckboxes(container, items, type) {
        container.innerHTML = '';
        items.forEach(item => {
          const div = document.createElement('div');
          div.className = 'form-check';
          div.innerHTML = `
        <input class="form-check-input" type="checkbox" name="${type}" value="${item._id}"
          id="edit${type}${item._id}" ${item.selected ? 'checked' : ''}>
        <label class="form-check-label" for="edit${type}${item._id}">
          ${item.productTitle || item.name}
        </label>
      `;
          container.appendChild(div);
        });
      }

      function handleEditFormSubmit(event) {
        event.preventDefault();
        const formData = new FormData(editOfferForm);
        const data = Object.fromEntries(formData.entries());

        // Convert checkboxes to arrays
        if (data.type === 'product') {
          data.products = formData.getAll('products');
        } else {
          data.categories = formData.getAll('categories');
        }

        fetch('/admin/addoffer/update', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        })
          .then(response => response.json())
          .then(result => {
            if (result.success) {
              editOfferModal.hide();
              updateOfferCard(result.offer);
            } else {
              alert('Failed to update offer: ' + result.error);
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while updating the offer: ' + error.message);
          });
      }

      function updateOfferCard(offer) {
        const card = document.querySelector(`[data-offer-id="${offer._id}"]`);
        if (card) {
          card.innerHTML = `
        <div class="card shadow">
          <div class="card-header py-3">
            <h5 class="card-title mb-0 text-primary">Offer Details</h5>
          </div>
          <div class="card-body">
            <p class="mb-1"><strong>Offer Name:</strong> ${offer.offerName}</p>
            <p class="mb-1 text-success"><strong>Discount:</strong> ${offer.discount}% Off</p>
            <p class="mb-1"><strong>Type:</strong> ${offer.type}</p>
            <p class="mb-1"><strong>Start Date:</strong> ${new Date(offer.startDate).toLocaleDateString()}</p>
            <p class="mb-1"><strong>End Date:</strong> ${new Date(offer.endDate).toLocaleDateString()}</p>
            <p class="mb-1"><strong>Items:</strong> ${offer.products.map(product => product.productTitle).join(', ') || offer.categories.map(category => category.name).join(', ') || 'None'}</p>
            <p class="mb-3 ${offer.status ? 'text-success' : 'text-danger'}">
              <strong>Status:</strong> ${offer.status ? 'Active' : 'Inactive'}
            </p>
            <button class="btn btn-primary edit-offer" data-offer-id="${offer._id}">Edit Offer</button>
            <button class="btn btn-danger delete-offer" data-offer-id="${offer._id}">Remove</button>
          </div>
        </div>
      `;
        }
      }

      if (productOfferForm) {
        productOfferForm.addEventListener('submit', event => handleFormSubmit(event, productOfferForm));
      }

      if (categoryOfferForm) {
        categoryOfferForm.addEventListener('submit', event => handleFormSubmit(event, categoryOfferForm));
      }

      if (editOfferForm) {
        editOfferForm.addEventListener('submit', handleEditFormSubmit);
      }

      offerCards.addEventListener('click', handleDeleteClick);
      offerCards.addEventListener('click', handleEditClick);
    });

  </script>
