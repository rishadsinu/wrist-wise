  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const dateFilterForm = document.getElementById('dateFilterForm');
      const quickFilterForm = document.getElementById('quickFilterForm');
      const tableBody = document.getElementById('orderTableBody');
      const totalSalesElement = document.getElementById('totalSales');
      const totalDiscountElement = document.getElementById('totalDiscount');
      const chartContext = document.getElementById('salesPieChart').getContext('2d');
      const downloadReportBtn = document.getElementById('downloadReportBtn');

      let salesPieChart;

      function updateTable(data) {
        const { orders, totalSales, totalDiscount, topSellingProducts, topSellingCategories } = data;
        tableBody.innerHTML = '';

        if (Array.isArray(orders) && orders.length > 0) {
          orders.forEach(order => {
            const row = `
          <tr>
            <td>${order.orderId}</td>
            <td>${order.date}</td>
            <td>${order.username}</td>
            <td>${order.paymentMethod}</td>
            <td>${order.quantity}</td>
            <td>₹${order.originalTotal}</td>
            <td>₹${order.discountedPrice}</td>
            <td>₹${order.finalTotal}</td>
          </tr>
        `;
            tableBody.innerHTML += row;
          });
        } else {
          tableBody.innerHTML = '<tr><td colspan="8">No orders found</td></tr>';
        }

        totalSalesElement.textContent = `₹${totalSales}`;
        totalDiscountElement.textContent = `₹${totalDiscount}`;

        const topProductsTableBody = document.getElementById('topProductsTableBody');
        topProductsTableBody.innerHTML = topSellingProducts.map(product => `
      <tr>
        <td>${product.name}</td>
        <td>${product.quantity}</td>
      </tr>
    `).join('');

        const topCategoriesTableBody = document.getElementById('topCategoriesTableBody');
        topCategoriesTableBody.innerHTML = topSellingCategories.map(category => `
      <tr>
        <td>${category.name}</td>
        <td>${category.quantity}</td>
      </tr>
    `).join('');

        updatePieChart(data);
      }

      function updatePieChart(data) {
        const totalSales = parseFloat(data.totalSales);
        const totalReturned = parseFloat(data.totalReturned);
        const totalCashPaid = parseFloat(data.totalCashPaid);
        const otherSales = totalSales - totalReturned - totalCashPaid;

        if (salesPieChart) {
          salesPieChart.destroy();
        }

        salesPieChart = new Chart(chartContext, {
          type: 'pie',
          data: {
            labels: ['Cash Pending', 'Cash Paid'],
            datasets: [{
              data: [otherSales, totalCashPaid],
              backgroundColor: ['#36A2EB', '#FFCE56'],
              hoverBackgroundColor: ['#36A2EB', '#FFCE56']
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
              display: true,
              text: 'Sales Distribution'
            }
          }
        });
      }

      function fetchOrders(url) {
        fetch(url)
          .then(response => response.json())
          .then(data => {
            updateTable(data);
          })
          .catch(error => console.error('Error:', error));
      }

      dateFilterForm.addEventListener('submit', function (e) {
        e.preventDefault();
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        fetchOrders(`/admin/filtered-orders?startDate=${startDate}&endDate=${endDate}`);
      });

      quickFilterForm.addEventListener('submit', function (e) {
        e.preventDefault();
        const quickFilter = document.getElementById('quickFilter').value;
        fetchOrders(`/admin/quick-filtered-orders?filter=${quickFilter}`);
      });

      downloadReportBtn.addEventListener('click', function () {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        const quickFilter = document.getElementById('quickFilter').value;

        let url = '/admin/download-report';
        if (startDate && endDate) {
          url += `?startDate=${startDate}&endDate=${endDate}`;
        } else if (quickFilter) {
          url += `?filter=${quickFilter}`;
        }

        window.location.href = url;
      });

      fetchOrders('/admin/filtered-orders');
    });
  </script>
